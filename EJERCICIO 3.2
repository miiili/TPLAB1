#include <Servo.h>

Servo servo;
int angulo = 90;
int salto = 1;

void setup () {
  servo.attach (6);
  servo.write (angulo); 
}

void loop () {
  int ejeX = analogRead (A0); 
  ejeX = constrain (ejeX, 0, 1024);
  angulo = constrain (angulo, 0, 180);

if (ejeX > 505 && ejeX < 520) {
servo.write (angulo); 

else if (ejeX < 505) {
if (ejeX > 435) {
salto = 1;
} else if (ejeX > 335) {
salto = 3;
} else if (ejeX > 235) {
salto = 7;
} else if (ejeX > 135) {
salto =9;
} else {
salto =15;
}
angulo -= salto; 
servo.write (angulo); 
}

else if (ejeX >520) {
if(ejeX<650){
salto=1;
}else if(ejeX<750){
salto=3;
}else if(ejeX<850){
salto=7;
}else if(ejeX<950){
salto=9;
}else{
salto=15;
}
angulo+=salto ;
servo.write(angulo);
}
delay(75);
}
